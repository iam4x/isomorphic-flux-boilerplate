{
  "parser": "babel-eslint",
  "extends": "future/react",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [2],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "camelcase": 2,
    "dot-notation": [2, {"allowSnakeCase": true}],
    "curly": false,
    "no-unused-expressions": false,
    "no-unused-vars": false,
    "comma-dangle": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": false }]
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "blockBindings": true
  }
}
